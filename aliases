# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

# Bundler
alias b="bundle"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias s="rspec"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Chef
alias chefsh='eval "$(chef shell-init ${SHELL##*/})"'
alias ksn='chef exec knife search node'
alias kns='chef exec knife node show'
alias kcu='chef exec knife spork upload'
alias ksp='chef exec knife spork promote'
alias kef='chef exec knife spork environment from file'
alias kdf='chef exec knife spork data bag from file'
alias krf='chef exec knife spork role from file'
alias tkl='chef exec kitchen list'
alias tkt='chef exec kitchen test'
alias tkc='chef exec kitchen converge'
alias tkv='chef exec kitchen verify'
alias tkd='chef exec kitchen destroy'
alias tks='chef exec kitchen login'

# Docker
alias dps='docker ps'
alias dex='docker exec'
alias drm='docker rm'
alias dim='docker images'
alias drmi='docker rmi'
alias dc='docker-compose'
alias dcup='docker-compose up'
alias dcps='docker-compose ps'
alias dcr='docker-compose run'

# Make directory and change into it
function mcd() {
  mkdir -p "$1" && cd "$1";
}

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
